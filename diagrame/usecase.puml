@startuml debriefing

left to right direction

actor admin
actor formateur 
actor etudiant
actor user 

rectangle "debreifing"{

    usecase "authontification" as auth
    usecase "login" as login
    usecase "logout"as logout 
    usecase "gestion globale" as gestion_glb
    usecase "evaluer les competences" as evaluate_comp
    usecase "configuration" as conf
    usecase "configuration des class" as class
    usecase "configuration des sprints" as sprint
    usecase "configuration des competences" as comp
    usecase "ajouter une class" as add_class
    usecase "modifier une class" as modify_class
    usecase "supriler une class" as delet_class
    usecase "ajouter un sprint" as add_sprint
    usecase "modifier un sprint" as modify_sprint
    usecase "suprimer un sprint" as delet_sprint
    usecase "ajouter une competence" as add_comp
    usecase "modifier une competence" as modify_comp
    usecase "suprimer une competence" as delet_comp
    usecase "gestion des donner" as gestion_db
    usecase "gestion des formateur" as teach
    usecase "gestion des etudiant" as student 
    usecase "gestion des briefs" as brief 
    usecase "asignier les formateur a une class" as asign_teach
    usecase "ajouter un formateur" as add_teach
    usecase "modifier un formateur" as modify_teach
    usecase "suprimer un formateur" as delet_teach 
    usecase "ajouter un etudiant" as add_etu
    usecase "modifier un etudiant" as modify_etu
    usecase "suprimer un etudiant" as delet_etu 
    usecase "ajouter un brief" as add_brf
    usecase "modifier un brief" as modify_brf
    usecase "suprimer un brief" as delet_brf
    usecase "gestion de debrifing" as gestion_dbr
    usecase "noter les brief" as grades 
    usecase "envoie de message " as send_message 
    usecase "envoie des resultat" as send_grades 
    usecase "consultation des notes " as see_grades 
    usecase "consultation des brief" as see_brf
    usecase "livration de brief" as send_prj
    usecase "validation des competence" as valid_comp
    usecase "asignier les competence a un brief" as asign_comp
    usecase "asignier les niveau des competence" as level_comp
    


    user -- auth
    auth <-- login
    auth <-- logout
    admin -- gestion_glb
    admin -- conf
    gestion_glb <-- asign_teach
    conf <-- class
    conf <-- sprint
    conf <-- comp
    class <-- add_class
    class <-- modify_class
    class <-- delet_class
    sprint <-- add_sprint
    sprint <-- modify_sprint
    sprint <-- delet_sprint
    comp <-- add_comp
    comp <-- modify_comp
    comp <-- delet_comp
    gestion_glb <-- teach
    teach <-- add_teach
    teach <-- modify_teach
    teach <-- delet_teach
    admin -- gestion_db
    formateur -- brief
    formateur -- student
    student <-- add_etu
    student <-- modify_etu
    student <-- delet_etu
    brief <-- add_brf
    brief <-- modify_brf
    modify_brf <-- asign_comp
    modify_brf <--level_comp
    brief <-- delet_brf
    formateur -- gestion_dbr
    gestion_dbr <-- grades
    gestion_dbr <-- send_grades
    gestion_dbr <-- send_message
    gestion_dbr <-- valid_comp
    etudiant -- see_grades
    etudiant -- see_brf
    etudiant -- send_prj
    gestion_dbr <-- evaluate_comp
    gestion_glb ..> auth : << include >>

    login <.. gestion_glb : <<include>>
    login <.. conf : <<include>>    
    login <.. gestion_dbr : <<include>>
    login <.. brief : <<include>>
    login <.. student : <<include>>

    
    see_grades ..> login : <<include>>
    see_brf ..> login : <<include>>
    send_prj ..> login : <<include>>

    admin --|> user
    formateur --|> user
    etudiant --|> user
}



@enduml

