@startuml DiagrammeClassesDebriefing

' ===== Utilisateurs =====
class User {
  +id : int
  +nom : string
  +email : string
  +password : string
  +login()
  +logout()
}

class Admin {
  +configurerSysteme()
  +gererDonnees()
}

class Formateur {
  +evaluerCompetences()
  +noterBrief()
  +validerCompetences()
}

class Etudiant {
  +livrerProjet()
  +consulterNotes()
}

User <|-- Admin
User <|-- Formateur
User <|-- Etudiant


' ===== Pédagogie =====
class Classe {
  +id : int
  +nom : string
  +annee : string
}

class Sprint {
  +id : int
  +nom : string
  +dateDebut : date
  +dateFin : date
}

class Competence {
  +id : int
  +nom : string
  +niveau : int
}

class Brief {
  +id : int
  +titre : string
  +description : text
}

class Debriefing {
  +id : int
  +date : date
}


' ===== Évaluation =====
class Livraison {
  +id : int
  +dateLivraison : date
  +lienProjet : string
}

class Note {
  +id : int
  +valeur : float
}

class Resultat {
  +id : int
  +statut : string
}


' ===== Communication =====
class Message {
  +id : int
  +contenu : text
  +dateEnvoi : date
}


